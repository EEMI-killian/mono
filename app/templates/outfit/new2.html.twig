{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel outfit{% endblock %}

{% block body %}
<div class="container mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">Créer un nouvel outfit</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Créer</button>
    {{ form_end(form) }}
</div>
{% endblock %}