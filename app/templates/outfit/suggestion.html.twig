                    <div class="mt-4 flex justify-between">
                        <button type="button" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition" onclick="addToWardrobe({{ outfit | json_encode }})">Add to My Outfits</button>
