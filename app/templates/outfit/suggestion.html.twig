            <p class="text-center text-gray-500">Aucune suggestion de tenue disponible.</p>
        {% endif %}


</div>
{% endblock %}

{% block javascripts %}
<script>
    function addToWardrobe(outfit) {
        fetch('{{ path('app_ai_suggestions_add') }}', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(outfit)
        })
        .then(response => {
            if (response.ok) {
                alert('Suggestion added to wardrobe');
            } else {
                alert('Failed to add suggestion to wardrobe');
            }
        })
        .catch(error => console.error('Error:', error));
    }
</script>
{% endblock %}