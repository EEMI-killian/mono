{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="text-gray-900 flex justify-center sm:p-10">
    <div class="max-w-screen-xl m-0 bg-white shadow sm:rounded-lg flex justify-center flex-1">
        <div class="lg:w-1/2 xl:w-5/12 p-6 sm:p-12 flex flex-col">
            <div class="mt-12 flex-1 flex flex-col items-center">
                <h1 class="text-2xl xl:text-3xl font-extrabold">
                    Inscription
                </h1>
                <div class="w-full flex-1 mt-8">
                    <div class="mx-auto max-w-xs">
                        {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
                            <div>
                                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.email, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre email'
                                        }
                                    }) }}
                                    <span class="absolute inset-y-0 end-0 grid place-content-center px-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="size-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                        </svg>
                                    </span>
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.firstName, 'Prénom', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.firstName, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre prénom'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.lastName, 'Nom', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.lastName, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre nom'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.plainPassword.first, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Votre mot de passe'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div>
                                {{ form_label(registrationForm.plainPassword.second, 'Confirmer le mot de passe', {'label_attr': {'class': 'sr-only'}}) }}
                                <div class="relative">
                                    {{ form_widget(registrationForm.plainPassword.second, {
                                        'attr': {
                                            'class': 'w-full px-8 py-4 rounded-lg font-medium bg-gray-100 border border-gray-200 placeholder-gray-500 text-sm focus:outline-none focus:border-gray-400 focus:bg-white',
                                            'placeholder': 'Confirmez votre mot de passe'
                                        }
                                    }) }}
                                </div>
                            </div>

                            <div class="flex items-center space-x-2">
                                {{ form_widget(registrationForm.agreeTerms, {
                                    'attr': {
                                        'class': 'h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded'
                                    }
                                }) }}
                                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'label_attr': {'class': 'text-gray-700'}}) }}
                            </div>

                            <button type="submit" class="mt-5 tracking-wide font-semibold bg-purple-500 text-gray-100 w-full py-4 rounded-lg hover:bg-purple-700 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">

                                <span class="ml-3">S'inscrire</span>
                            </button>
                        {{ form_end(registrationForm) }}

                        <div class="mt-6 text-center">
                            <a href="{{ path('app_login') }}" class="text-purple hover:underline">
                                Déjà inscrit ? Connectez-vous
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div>
</div>
{% endblock %}