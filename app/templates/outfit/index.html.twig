{% extends 'base.html.twig' %}

{% block title %}Outfit index{% endblock %}

{% block body %}
    <h1>Outfit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>ImageUrl</th>
                <th>AddAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for outfit in outfits %}
            <tr>
                <td>{{ outfit.id }}</td>
                <td>{{ outfit.name }}</td>
                <td>{{ outfit.imageUrl }}</td>
                <td>{{ outfit.addAt ? outfit.addAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_outfit_show', {'id': outfit.id}) }}">show</a>
                    {% if is_granted('EDIT', outfit) %}
                    <a href="{{ path('app_outfit_edit', {'id': outfit.id}) }}">edit</a>
                    {% endif %}
                    {% if is_granted('DELETE', outfit) %}
                    <form method="post" action="{{ path('app_outfit_delete', {'id': outfit.id}) }}" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ outfit.id) }}">
                        <button type="submit">delete</button>
                    </form>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_outfit_new') }}">Create new</a>
{% endblock %}
