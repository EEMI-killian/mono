{% extends 'base.html.twig' %}

{% block title %}Éditer un item{% endblock %}

{% block body %}
<div class="p-6 bg-white dark:bg-gray-dark dark:text-white">
    <h1 class="text-2xl font-bold mb-4">Éditer un item</h1>

        <div class="flex flex-col p-6 gap-6">
