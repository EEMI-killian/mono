{% extends 'base.html.twig' %}

{% block title %}Nouvelle Tenue{% endblock %}

{% block body %}
<div class="container mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4">Ajouter une nouvelle tenue</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="mt-5 tracking-wide font-semibold bg-blue-500 text-white w-full py-4 rounded-lg hover:bg-blue-600 transition-all duration-300 ease-in-out flex items-center justify-center focus:shadow-outline focus:outline-none">
            Ajouter
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}